#!/usr/bin/goscript

package main

import . "github.com/kless/SQLModel/sqlmodel"

func main() {
	metadata := Metadata().Mode(Localiza)
	//blob := []byte("123")

	Table("types", metadata,
		Column("field_int", Integer),
		Column("field_float", Float),
		Column("field_text", Text),
		Column("field_blob", Blob),
		Column("field_bool", Boolean),
	)

	Table("default_value", metadata,
		Column("id", Integer).PrimaryKey(),
		Column("def_int", Integer).Default(55),
		Column("def_float", Float).Default(10.10),
		Column("def_text", Text).Default("string"),
		//Column("def_blob", Blob).Default(blob),
		Column("def_bool", Boolean).Default(false),
	)

	metadata.CreateAll().Write(STDOUT)
	//metadata.Write(FILEOUT)
}

